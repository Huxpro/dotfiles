{
  "languageserver": {
    "fnl": {
      "command": "fnl",
      "args": ["-fls"],
      "filetypes": ["fnl"]
    },
    "ocaml": {
       "command": "ocaml-language-server",
       "args": ["--stdio"],
       "filetypes": ["ocaml"]
     },
    "reason": {
      "command": "~/reason/reason-language-server.exe",
      "filetypes": ["reason"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": ["Makefile", "compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    }
  },
  "highlight.disableLanguages" : ["markdown"],
  "diagnostic.virtualText" : false   // prefer floating windows
}

